{% extends 'public/base.twig' %}

{% block content %}

    <script defer src="/BookShopMVC/public/js/orders.js"></script>

    <div class="tab-pane" id="history" role="tabpanel">
        <div class="row justify-content">
            <div class="col text-left">
                <h3>История покупок:</h3>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">новер заказа</th>
                <th scope="col">дата оформления</th>
                <th scope="col">адресс</th>
                <th scope="col">статус сделки</th>
                <th scope="col">подробнее</th>
            </tr>
            </thead>
            <tbody>
            {% for singleDetail in orders  %}
                <tr>

                    <td >{{ singleDetail.orderID }}</td>
                    <td>{{ singleDetail.orderDatetime }}</td>
                    <td>{{ singleDetail.adressOrder }}</td>
                    <td>{{ singleDetail.statusTitle }}</td>
                    <td>
                        <a href="order/{{ singleDetail.orderID }}" class="btn btn-primary"> подробнее </a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div id="btn-yet" class="container-fluid">
            <div class="row justify-content-center ">
                <div  id="deal-yet"  class=" col-4 btn btn-primary">еще</div>
            </div>

        </div>

    </div>


    </div>

{% endblock %}