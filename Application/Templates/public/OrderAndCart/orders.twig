{% extends 'public/base.twig' %}

{% block content %}

    <script src="/BookShopMVC/public/js/orders.js"></script>

<div class="tab-pane" id="history" role="tabpanel">
    <div class="row justify-content">
        <div class="col text-left">
            <h3>История покупок:</h3>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Обложка</th>
            <th scope="col">Название книги</th>
            <th scope="col">Автор</th>
            <th scope="col">Цена</th>
            <th scope="col">количество</th>
            <th scope="col">Дата операции</th>
        </tr>
        </thead>
        <tbody>
        {% for singleDetail in orders  %}
        <tr>

            <th scope="row">
                <img src="{{ singleDetail.bookInfo.bookImagePath }}" style="float: left; width: 50px"  alt="Cinque Terre">
            </th>
            <td>{{ singleDetail.bookInfo.bookTitle }}</td>
            <td>
                {#{% for  singleDetail.bookInfo.authors  in author %}#}
                    {#author #}
                {#{% endfor %}#}
                 автор
            </td>
            <td>{{ singleDetail.detail.bookPrice }} руб.</td>
            <td>{{ singleDetail.detail.bookAmount }}</td>
            <td>{{ singleDetail.date }}</td>


        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container-fluid">
        <div class="row justify-content-center ">
            <div  id="deal-yet" data-offset="0" class=" col-4 btn btn-primary">еще</div>
        </div>

        </div>

    </div>


</div>

{% endblock %}