{% extends 'base.twig' %}

{% block content%}

    <form>
        <div class="form-group">
            <label for="formGroupExampleInput">Название книги </label>
            <input value="{{ book.bookTitle }}" type="text" class="form-control" id="formGroupExampleInput" placeholder="Название книги">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">ISBN</label>
            <input  value="{{ book.ISBN }}" type="text" class="form-control" id="formGroupExampleInput2" placeholder="ISBN">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Кол-во страницы</label>
            <input  value="{{ book.bookPages }}" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Кол-во страниц">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Кол-во страниц</label>
            <input  value="{{ book.bookPrice }}" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Цена книги">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Кол-во в магазине</label>
            <input  value="{{ book.bookAmount }}" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Кол-во книг">
        </div>

        <div class="form-group">
            <div class="btn btn-primary">Обновить</div>
        </div>

        <div class="form-group">
            <div class="btn btn-danger">Удалить</div>
        </div>

    </form>

{% endblock %}