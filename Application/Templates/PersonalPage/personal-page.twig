{% extends 'base.twig' %}

{% block content %}

    <title>Личный кабинет</title>

    <script defer src="js/personal-page.js"></script>

    <div class="row">

        <div class="col-4">

            <img src="../public/images/avatars/43698072_273177756879459_4154127805892454113_n.jpg" class="img-thumbnail img-responsive" alt="your-avatar" style="margin-bottom: 7px;">

            <button type="button" class="btn btn-sm btn-secondary btn-block">Сменить аватар</button>
            <button type="button" class="btn btn-sm btn-dark btn-block" >Настроить профиль</button>

        </div>

        <div class="col-8">

            <form>

                <div class="form-group row">
                    <label for="staticLogin" class="col-sm-2 col-form-label">Ваш логин</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="Login" value="{{ user.userLogin }}">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Ваш Email</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="Login" value="{{ user.userEmail }}">
                    </div>
                </div>

            </form>

        </div>

    </div>


{% endblock %}