{% extends 'base.twig' %}

{% block content %}

    <title>Личный кабинет</title>

    <script defer src="/BookShopMVC/public/js/personal-page.js"></script>

    <div class="row">

        <div class="col-4">

            {% if not user.userAvatarImagePath %}
                <img src="../public/images/avatars/default_avatar.jpg" class="img-thumbnail img-responsive" alt="your-avatar" style="margin-bottom: 7px;">

                {% else %}
                    <img src="../{{ user.userAvatarImagePath  }}" class="img-thumbnail img-responsive" alt="your-avatar" style="margin-bottom: 7px;">
            {% endif %}

            <button type="button" class="btn btn-sm btn-secondary btn-block" id="changeAvatarButton">Сменить аватар</button>
            <button type="button" class="btn btn-sm btn-dark btn-block" >Настроить профиль</button>

        </div>

        <div class="col-8">

            <form>

                <div class="form-group row">
                    <label for="staticLogin" class="col-sm-2 col-form-label">Ваш логин</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="Login" value="{{ user.userLogin }}">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Ваш Email</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="Login" value="{{ user.userEmail }}">
                    </div>
                </div>

            </form>

        </div>

    </div>


{% endblock %}