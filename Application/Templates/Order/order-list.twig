{% extends 'base.twig' %}

{% block content %}

    <script defer src="/BookShopMVC/public/js/order.js" ></script>

    {% if  not orders%}
       <h3>Заказов нет!!!!!</h3>
    {% endif %}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">UserLogin</th>
            <th scope="col">Дата заказа</th>
            <th scope="col">Статус заказа</th>
            <th scope="col">Количество книг</th>
            <th scope="col">Подробнее</th>
        </tr>
        </thead>
        <tbody id="ordersTable">

        {% for od in orders %}
            <tr>
                <td>{{ od.order.orderID }}</td>
                <td>{{ od.user.userLogin }}</td>
                <td>{{ od.date }}</td>
                <td>{{ od.statusTitle.statusTitle }}</td>
                <td>{{ od.count.0}}</td>
                <td>
                    <a href="/BookShopMVC/public/admin/orderdetails/{{ od.order.orderID }}" class="btn btn-primary" >Подробнее</a>
                </td>
            </tr>
        {%endfor  %}

        </tbody>
    </table>

    {% if  orders.length > 0%}
    <div id="moreOrders" class="btn btn-primary col-12">Еще</div>
    {% endif %}
{% endblock %}